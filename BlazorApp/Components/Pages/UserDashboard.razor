@page "/user-dashboard"
@using BlazorApp.Service
@using BlazorApp.Components.Pages.DashboardSection
@inject DBService DbService
@inject UsersService.User user

<div class="d-flex align-items-start">
    <section id="features" class="container my-5">
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <img src="https://cbx-prod.b-cdn.net/COLOURBOX7139093.jpg" alt="Smiley face" width="42"
                             height="42" class="rounded-circle" style="border:5px solid black">
                        <h5 class="card-title">Navn</h5>

                        <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist"
                             aria-orientation="vertical">
                            <div class="list-group">
                                <button type="button" onclick="@(() => HandleSection("dashboard"))"
                                        class="list-group-item list-group-item-action bg-secondary text-white active">
                                    Dashboard
                                </button>
                                <button type="button" onclick="@(() => HandleSection("profile-info"))"
                                        class="bg-body-secondary list-group-item list-group-item-action">Profil
                                    oplysninger
                                </button>
                                @*<a href="/mine_bilannoncer"
                               class="bg-body-secondary list-group-item list-group-item-action">Mine Bilannoncer</a>
                            <a href="/betalings_historik"
                               class="bg-body-secondary list-group-item list-group-item-action">Betalings
                                historik</a>
                            <a href="/settings" class="bg-body-secondary list-group-item list-group-item-action">Settings</a>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                @switch (sectionOption)
                {
                    case "dashboard":
                        <DashboardCoopers/>
                        break;
                    case "profile-info":
                        <ProfileInfo/>
                        break;
                    default:
                        <p>Choose a section</p>
                        break;
                }
            </div>
        </div>

    </section>
</div>

@code{

    string sectionOption = "";

    protected override void OnInitialized()
    {
        
    }

    private void HandleSection(string option)
    {
        Console.WriteLine("Setting option...");
        sectionOption = option;
    }

}