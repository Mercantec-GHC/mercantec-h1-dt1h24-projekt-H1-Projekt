@using BlazorApp.Service

<EditForm Model="HybridCooperFormData">
    <label class="form-label">Fuel type 1:</label>
    <InputText @bind-Value="HybridCooperFormData.FuelType1" class="form-control"/>

    <label class="form-label">Fuel type 2:</label>
    <InputText @bind-Value="HybridCooperFormData.FuelType2" class="form-control"/>

    <label class="form-label">Tank Capacity:</label>
    <InputNumber @bind-Value="HybridCooperFormData.TankCapacity" class="form-control"/>

    <label class="form-label">Charge Capacity:</label>
    <InputNumber @bind-Value="HybridCooperFormData.ChargeCapacity" class="form-control"/>

    <label class="form-label">Km. pr. liter:</label>
    <InputNumber @bind-Value="HybridCooperFormData.KmPrLiter" class="form-control"/>

    <label class="form-label">Km. pr. kilowatt hour:</label>
    <InputNumber @bind-Value="HybridCooperFormData.KmPrKwh" class="form-control"/>

    <label class="form-label">Gears:</label>
    <InputNumber @bind-Value="HybridCooperFormData.Gears" class="form-control"/>
</EditForm>

@code{
    [Parameter] public MiniCooper.HybridMiniCooper HybridCooperFormData { get; set; } = new();
}