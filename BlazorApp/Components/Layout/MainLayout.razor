@inherits LayoutComponentBase
@inject NavigationManager Navigation

@{
    var currentUrl = Navigation.Uri;
}

@if (currentUrl.Contains("/dashboard") ||
     currentUrl.Contains("/profil_oplysninger") ||
     currentUrl.Contains("/mine_bilannoncer") ||
     currentUrl.Contains("/betalings_historik") ||
     currentUrl.Contains("/settings"))
{
    <NavMenu/>

    <!-- Custom layout for /login -->
    <div>
        <main>
            <!-- Vertical Pills Navigation -->
            <div class="d-flex align-items-start">
                <!-- Features Section -->
                <section id="features" class="container my-5">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-body">
                                    <img src="https://cbx-prod.b-cdn.net/COLOURBOX7139093.jpg" alt="Smiley face"
                                         width="42" height="42" class="rounded-circle" style="border:5px solid black">
                                    <h5 class="card-title">Navn</h5>

                                    <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist"
                                         aria-orientation="vertical">
                                        <div class="list-group">
                                            @if (currentUrl.Contains("/dashboard"))
                                            {
                                                <a href="/dashboard"
                                                   class="list-group-item list-group-item-action active">Dashboard</a>
                                            }
                                            else
                                            {
                                                <a href="/dashboard" class="list-group-item list-group-item-action">Dashboard</a>
                                            }
                                            @if (currentUrl.Contains("/profil_oplysninger"))
                                            {
                                                <a href="/profil_oplysninger"
                                                   class="list-group-item list-group-item-action active">Profil
                                                    oplysninger</a>
                                            }
                                            else
                                            {
                                                <a href="/profil_oplysninger"
                                                   class="list-group-item list-group-item-action">Profil oplysninger</a>
                                            }
                                            @if (currentUrl.Contains("/mine_bilannoncer"))
                                            {
                                                <a href="/mine_bilannoncer"
                                                   class="list-group-item list-group-item-action active">Mine
                                                    Bilannoncer</a>
                                            }
                                            else
                                            {
                                                <a href="/mine_bilannoncer"
                                                   class="list-group-item list-group-item-action">Mine Bilannoncer</a>
                                            }
                                            @if (currentUrl.Contains("/betalings_historik"))
                                            {
                                                <a href="/betalings_historik"
                                                   class="list-group-item list-group-item-action active">Betalings
                                                    historik</a>
                                            }
                                            else
                                            {
                                                <a href="/betalings_historik"
                                                   class="list-group-item list-group-item-action">Betalings historik</a>
                                            }
                                            @if (currentUrl.Contains("/settings"))
                                            {
                                                <a href="/settings"
                                                   class="list-group-item list-group-item-action active">Settings</a>
                                            }
                                            else
                                            {
                                                <a href="/settings" class="list-group-item list-group-item-action">Settings</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Biler liste</h5>
                                    <p class="card-text">Her kan du se alle data for dine oprettede salgsannoncer</p>
                                    <div class="tab-content" id="v-pills-tabContent">
                                        <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel"
                                             aria-labelledby="v-pills-home-tab" tabindex="0">
                                            @Body
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </main>
    </div>
}
else
{
    <!-- Default layout for other pages -->
    <NavMenu/>
    <div>
        <main>
            @Body
        </main>
    </div>
}
<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
